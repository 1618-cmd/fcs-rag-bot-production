# Vena RAG Bot Production - Environment Variables
# Copy this file to .env and fill in your actual values
# Command: cp env.template .env

# ============================================
# LLM Provider Configuration
# ============================================
# Options: 'openai' or 'anthropic'
LLM_PROVIDER=openai

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o

# ============================================
# Anthropic Configuration (for Claude)
# ============================================
# Required if LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ============================================
# Embeddings Configuration
# ============================================
# Note: Anthropic doesn't provide embeddings, so we use OpenAI embeddings
# even when using Claude as the LLM
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_PROVIDER=openai

# ============================================
# Qdrant Cloud Configuration (Vector Database)
# ============================================
# Get these from: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster-id.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=fcs-rag-bot-prod

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Format: postgresql://user:password@host:port/database
# For Railway: Use the DATABASE_URL provided by Railway
# For local: postgresql://postgres:password@localhost:5432/vena_rag_bot
DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# Redis Configuration (Caching)
# ============================================
# Format: redis://user:password@host:port
# For Railway: Use the REDIS_URL provided by Railway
# For local: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ============================================
# Application Configuration
# ============================================
# Environment: production, development, or testing
ENVIRONMENT=development

# Debug mode (set to true for development)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Frontend URL for CORS (your frontend domain)
# Default: https://www.fcs-alex.com
FRONTEND_URL=https://www.fcs-alex.com

# ============================================
# Cache Configuration
# ============================================
# Cache TTL in seconds (24 hours = 86400)
CACHE_TTL=86400

# ============================================
# AWS S3 Configuration (Optional - for knowledge base hosting)
# ============================================
# Set USE_S3=true to load documents from S3 instead of local filesystem
# USE_S3=false
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name
# S3_PREFIX=knowledge_base/  # Optional: folder path in S3 bucket

# ============================================
# Ingestion API Key (Optional - for securing /api/ingest endpoint)
# ============================================
# Set this to secure the ingestion endpoint (required if using Lambda triggers)
# INGESTION_API_KEY=your-secret-api-key-here

# ============================================
# RAG Configuration (Optional - defaults work)
# ============================================
# CHUNK_SIZE=500
# CHUNK_OVERLAP=50
# TOP_K_RESULTS=5
# MAX_TOKENS=2000
# TEMPERATURE=0.1

# ============================================
# Jira Configuration (Optional - for ticket creation)
# ============================================
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
# JIRA_SERVER_URL=https://yourcompany.atlassian.net
# JIRA_EMAIL=your-email@company.com
# JIRA_API_TOKEN=your-jira-api-token-here
# JIRA_PROJECT_KEY=SUPPORT
# JIRA_ISSUE_TYPE=Task
# JIRA_LABELS=rag-bot,support

# ============================================
# Vena API Configuration (Optional - for real-time tenant data)
# ============================================
# Get these from Vena: Admin tab → Application Tokens → Show Token
# VENA_API_USER=your-api-user-id
# VENA_API_KEY=your-api-key
# VENA_TENANT_NAME=Vena Workshop
# VENA_API_HUB=eu1  # Hub/region from your tenant URL (eu1, us1, etc.)

# ============================================
# Authentication Configuration (Simple Auth - No Database)
# ============================================
# JWT secret key for token signing (change in production!)
JWT_SECRET_KEY=your-secret-key-change-in-production
# Admin credentials for login
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin

